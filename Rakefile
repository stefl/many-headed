require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "many-headed"
    gem.summary = %Q{Create apps which run N instances reliably}
    gem.email = "david@drmaciver.com"
    gem.homepage = "http://github.com/DRMacIver/many-headed"
    gem.authors = ["David R. MacIver"]
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end
